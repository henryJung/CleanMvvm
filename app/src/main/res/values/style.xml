<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <style name="List">
        <item name="android:background">@color/backgroundColor</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:scrollbars">none</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="text" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/text_gray</item>
    </style>

    <style name="text.light" parent="text">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="text.title" parent="text">
        <item name="android:textSize">16sp</item>
    </style>
</resources>